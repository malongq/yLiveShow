<?xml version="1.0" encoding="utf-8"?><!--rotate表示旋转--><!--fromDegrees表示从0开始--><!--pivotX  pivotY  表示以图像中心为中轴点旋转--><!--toDegrees表示到1080°  3圈--><!--shape形状圆环--><!--innerRadiusRatio内角--><!--thicknessRatio厚度值越大圆环越细--><!--useLevel--><!----><!----><!----><!---->
<rotate

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080.0">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10"
        android:useLevel="false">

        <gradient
            android:centerColor="#ffdc35"
            android:centerY="0.50"
            android:endColor="#ffffff"
            android:type="sweep"
            android:useLevel="false" />

    </shape>


</rotate>
